{%- import_yaml "salt/defaults.yaml" as default_settings -%}
{%- set saltminion = salt['pillar.get']('saltminion', default=default_settings.saltminion, merge=True) -%}
# Salt MySQL settings
# Managed by Salt - do not edit!

# Notes:
# - mysql.host is always localhost. We do not want each salt minion to
#   control database servers other than itself
# - mysql.user and mysql.pass should not be declared here! Instead, these
#   are declared as pillars which override the settings in this config file

mysql.host: 'localhost'
mysql.port: {{ saltminion.mysql.port }}
