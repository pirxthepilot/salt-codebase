{%- import_yaml "realmd/defaults.yaml" as default_settings -%}
{%- set realmd = salt['pillar.get']('realmd', default=default_settings.realmd, merge=True) -%}
# AD sudoers
# Managed by Salt - do not edit!

{% if realmd.realm_sudoers.groups is defined -%}
# Groups
{% for group in realmd.realm_sudoers.groups -%}
%{{ group }} ALL=(ALL) ALL
{% endfor %}
{% endif -%}

{% if realmd.realm_sudoers.users is defined -%}
# Users
{% for user in realmd.realm_sudoers.users -%}
{{ user }} ALL=(ALL) ALL
{% endfor -%}
{% endif -%}
